<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2021-11-02-create-meeting_date-table" author="terova">
        <createTable tableName="meeting_date">
            <column autoIncrement="true" name="meeting_date_id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="meeting_date_pkey"/>
            </column>
            <column name="version" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="TEXT"/>
            <column name="deleted_by" type="TEXT"/>
            <column name="modified_by" type="TEXT"/>
            <column name="creation_time" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modification_time" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="deletion_time" type="TIMESTAMP WITH TIME ZONE"/>

            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2021-11-02-create-justification-table" author="terova">
        <createTable tableName="justification">
            <column name="name" type="VARCHAR(255)">
                <constraints primaryKey="true" primaryKeyName="justification_pkey"/>
            </column>
        </createTable>
        <insert tableName="justification">
            <column name="name" value="AUT"/>
        </insert>
        <insert tableName="justification">
            <column name="name" value="KKT"/>
        </insert>
        <insert tableName="justification">
            <column name="name" value="VIR"/>
        </insert>
    </changeSet>

    <changeSet id="2021-11-02-create-translator-table" author="terova">
        <createTable tableName="translator">
            <column autoIncrement="true" name="translator_id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="translator_pkey"/>
            </column>
            <column name="version" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="TEXT"/>
            <column name="deleted_by" type="TEXT"/>
            <column name="modified_by" type="TEXT"/>
            <column name="creation_time" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modification_time" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="deletion_time" type="TIMESTAMP WITH TIME ZONE"/>

            <column name="onr_oid" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2021-11-02-create-authorisation-table" author="terova">
        <createTable tableName="authorisation">
            <column autoIncrement="true" name="authorisation_id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="authorisation_pkey"/>
            </column>
            <column name="version" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="TEXT"/>
            <column name="deleted_by" type="TEXT"/>
            <column name="modified_by" type="TEXT"/>
            <column name="creation_time" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modification_time" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="deletion_time" type="TIMESTAMP WITH TIME ZONE"/>

            <column name="translator_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="justification_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="meeting_date_id" type="BIGINT"/>
            <column name="aut_date" type="DATE"/>
            <column name="kkt_check" type="BOOL"/>
            <column name="vir_date" type="DATE"/>
            <column name="assurance_date" type="DATE"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="authorisation" baseColumnNames="translator_id"
                                 referencedTableName="translator" referencedColumnNames="translator_id"
                                 constraintName="fk_authorisation_translator"
                                 onDelete="NO ACTION" onUpdate="NO ACTION"/>
        <addForeignKeyConstraint baseTableName="authorisation" baseColumnNames="justification_name"
                                 referencedTableName="justification" referencedColumnNames="name"
                                 constraintName="fk_authorisation_justification"
                                 onDelete="NO ACTION" onUpdate="NO ACTION"/>
        <addForeignKeyConstraint baseTableName="authorisation" baseColumnNames="meeting_date_id"
                                 referencedTableName="meeting_date" referencedColumnNames="meeting_date_id"
                                 constraintName="fk_authorisation_meeting_date"
                                 onDelete="NO ACTION" onUpdate="NO ACTION"/>
        <sql>
            ALTER TABLE authorisation
                ADD CONSTRAINT ck_authorisation_by_justification
                    CHECK (justification_name = 'AUT' AND meeting_date_id IS NOT NULL AND aut_date IS NOT NULL AND kkt_check IS     NULL AND vir_date IS NULL     AND assurance_date IS NOT NULL
                               <!-- FIXME kkt_check should be true, otherwise null? -->
                        OR justification_name = 'KKT' AND meeting_date_id IS NOT NULL AND aut_date IS NULL     AND kkt_check IS NOT NULL AND vir_date IS NULL     AND assurance_date IS NOT NULL
                        OR justification_name = 'VIR' AND meeting_date_id IS NOT NULL AND aut_date IS NULL     AND kkt_check IS     NULL AND vir_date IS NOT NULL AND assurance_date IS NOT NULL
                        OR justification_name = 'VIR' AND meeting_date_id IS NULL     AND aut_date IS NULL     AND kkt_check IS     NULL AND vir_date IS NOT NULL AND assurance_date IS NULL)
        </sql>
    </changeSet>

    <changeSet id="2021-11-02-create-language_pair-table" author="terova">
        <createTable tableName="language_pair">
            <column autoIncrement="true" name="language_pair_id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="language_pair_pkey"/>
            </column>
            <column name="version" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="TEXT"/>
            <column name="deleted_by" type="TEXT"/>
            <column name="modified_by" type="TEXT"/>
            <column name="creation_time" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modification_time" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="deletion_time" type="TIMESTAMP WITH TIME ZONE"/>

            <column name="authorisation_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="from_lang" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="to_lang" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="permission_to_publish" type="BOOL"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="language_pair" baseColumnNames="authorisation_id"
                                 referencedTableName="authorisation" referencedColumnNames="authorisation_id"
                                 constraintName="fk_language_pair_authorisation"
                                 onDelete="NO ACTION" onUpdate="NO ACTION"/>
        <createIndex tableName="language_pair" indexName="language_pair_uniq" unique="true">
            <column name="authorisation_id"/>
            <column name="from_lang"/>
            <column name="to_lang"/>
        </createIndex>
    </changeSet>

    <changeSet id="2021-11-02-create-validity-table" author="terova">
        <createTable tableName="validity">
            <column autoIncrement="true" name="validity_id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="validity_pkey"/>
            </column>
            <column name="version" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="TEXT"/>
            <column name="deleted_by" type="TEXT"/>
            <column name="modified_by" type="TEXT"/>
            <column name="creation_time" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modification_time" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="deletion_time" type="TIMESTAMP WITH TIME ZONE"/>

            <column name="authorisation_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="begin_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="DATE"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="validity" baseColumnNames="authorisation_id"
                                 referencedTableName="authorisation" referencedColumnNames="authorisation_id"
                                 constraintName="fk_validity_authorisation"
                                 onDelete="NO ACTION" onUpdate="NO ACTION"/>
        <sql><![CDATA[
            ALTER TABLE validity
                ADD CONSTRAINT ck_validity_end_date
                    CHECK (end_date IS NULL OR begin_date < end_date)
            ]]></sql>
        <!--TODO create trigger which checks that if end date is null then authorisation.justification_name='VIR' ? -->
    </changeSet>

    <changeSet id="2021-11-02-create-validity_reminder-table" author="terova">
        <createTable tableName="validity_reminder">
            <column autoIncrement="true" name="validity_reminder_id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="validity_reminder_pkey"/>
            </column>
            <column name="version" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="TEXT"/>
            <column name="deleted_by" type="TEXT"/>
            <column name="modified_by" type="TEXT"/>
            <column name="creation_time" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modification_time" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="deletion_time" type="TIMESTAMP WITH TIME ZONE"/>

            <column name="validity_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="from" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="to" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="subject" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="body" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="sent" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="error" type="text"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="validity_reminder" baseColumnNames="validity_id"
                                 referencedTableName="validity" referencedColumnNames="validity_id"
                                 constraintName="fk_validity_reminder_validity"
                                 onDelete="NO ACTION" onUpdate="NO ACTION"/>
    </changeSet>

</databaseChangeLog>